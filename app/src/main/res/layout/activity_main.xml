<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/EditEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        app:layout_constraintBottom_toTopOf="@+id/deleteUserID2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editUserName2"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <ImageView
        android:id="@+id/deleteEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddUserName2"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:padding="2dp"
        android:paddingBottom="4dp"
        android:text="Delete Employee"
        android:textColor="#1E1E1E"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/EditEmployee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editUserName2" />

    <EditText
        android:id="@+id/editUserName2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#B3B3B3"
        android:ems="10"
        android:foreground="@drawable/borderthin"
        android:hint="Last name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editUserName1" />

    <EditText
        android:id="@+id/editUserName1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#B3B3B3"
        android:ems="10"
        android:foreground="@drawable/borderthin"
        android:hint="First name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editUserID" />

    <EditText
        android:id="@+id/editUserID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:foreground="@drawable/borderthin"
        android:hint="Employee ID"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/deleteUserID2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:foreground="@drawable/borderthin"
        android:hint="Employee ID"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:padding="2dp"
        android:paddingBottom="4dp"
        android:text="Edit Employee"
        android:textColor="#1E1E1E"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/deleteEmployee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddUserName2" />

    <EditText
        android:id="@+id/AddUserName2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#B3B3B3"
        android:ems="10"
        android:foreground="@drawable/borderthin"
        android:hint="Last name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddUserName1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:padding="2dp"
        android:paddingBottom="4dp"
        android:text="Add Employee"
        android:textColor="#1E1E1E"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/addEmployee"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#D8D8D8"
        android:backgroundTintMode="add"
        android:foreground="@drawable/border"
        android:paddingBottom="4dp"
        android:text="Admin Page"
        android:textAlignment="center"
        android:textColor="#1E1E1E"
        android:textSize="24dp"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:drawableTintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:padding="2dp"
        android:paddingBottom="4dp"
        android:text="View Employees"
        android:textColor="#1E1E1E"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/viewEmployeeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/viewEmployeeButton"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:foreground="@android:drawable/arrow_down_float"
        android:padding="2dp"
        android:paddingBottom="4dp"
        android:textColor="#1E1E1E"
        android:textSize="20dp"
        android:onClick="showUsers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/AddUserName1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#B3B3B3"
        android:ems="10"
        android:foreground="@drawable/borderthin"
        android:hint="First name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddUserID" />

    <EditText
        android:id="@+id/AddUserID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:foreground="@drawable/borderthin"
        android:hint="Employee ID"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/addEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:clickable="true"
        android:onClick="addUser"
        app:layout_constraintBottom_toTopOf="@+id/AddUserID"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="fill_parent"
        android:layout_height="145dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="-16dp">

        <LinearLayout
            android:id="@+id/viewUsers"
            android:layout_width="409dp"
            android:layout_height="145dp"
            android:isScrollContainer="true"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            android:overScrollMode="always"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:layout_editor_absoluteX="2dp"></LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>